<div class="form-check">
    <input class="form-check-input" type="checkbox" @onchange="CheckedChange" id="@Name">
    <label class="form-check-label" for="@Name">
        @Text
    </label>
</div>
@code {
    protected override void OnInitialized()
    {
        Name = YGate.String.Operations.Name.Generate();
    }

    [Parameter]
    public string Text { get; set; }

    private string Name { get; set; }

    [Parameter]
    public EventCallback<ChangeEventArgs> CheckedChange { get; set; }



}
